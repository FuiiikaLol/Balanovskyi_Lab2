#include <iostream> // Підключаєм бібліотеку iostream
#include <windows.h> // Підключаєм бібліотеку windows.h
using namespace std; // Щоб не писати std::cout,std::endl


int factorial=1; // робим змінну factorial
int main() {
    SetConsoleCP(1251); // підключаємо кирилицю
    SetConsoleOutputCP(1251); // підключаємо кирилицю

    cout<<"Знайдемо фактеріал з 6"<<endl; // вивів текст в консоль(термінал)

    for(int i=1;i<=6;i++){ // зробив цикл від 1 до 6(можна змінити на любе число(нормальне число, а не 69538693595493), щоб отримати факторіал)
        factorial *=i;     // цикл працює і за рахунок добутку знаходить нам факторіал
        cout<<factorial<<endl; // виводить факторіал на екран

    }


}




